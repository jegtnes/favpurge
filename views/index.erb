<h1><%= session[:username]%>' favorites</h1>
<ul class="favorites">
<% favs = client.favorites(count: 100)
favs.each do |fav| %>
  <li class="favorites__favorite">
    <p><%= fav.text.gsub(/\n/, '<br/>') %></p>
    <a href="/fav/<%= fav.id %>">View</a>
    <form action="/fav/<%= fav.id %>" method="post">
      <input name="_method" type="hidden" value="delete" />
      <input type="submit" value="Delete tweet" />
    </form>
  </li>
<% end %>
</ul>
